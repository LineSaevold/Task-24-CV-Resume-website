                <nav class="mdc-list">
                    <a class="mdc-list-item" tabindex="-1"><i class="material-icons mdc-list-item__graphic" aria-hidden="true">calendar_today</i>#{date}</a>
                    <a class="mdc-list-item" tabindex="-1"><i class="material-icons mdc-list-item__graphic" aria-hidden="true">home</i>#{address}</a>
